{
    "mcpServers": {
        "tavily": {
            "command": "npx",
            "args": [
                "-y",
                "tavily-mcp"
            ],
            "env": {
                "TAVILY_API_KEY": "${TAVILY_API_KEY}"
            }
        },
        "github": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-github"
            ],
            "env": {
                "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
            }
        },
        "puppeteer": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-puppeteer"
            ],
            "env": {}
        },
        "filesystem": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-filesystem",
                "${PROJECT_ROOT}/.antigravity-output"
            ],
            "env": {}
        },
        "memory": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-memory"
            ],
            "env": {}
        },
        "git": {
            "command": "uvx",
            "args": [
                "mcp-server-git",
                "--repository",
                "${PROJECT_ROOT}"
            ],
            "env": {}
        }
    },
    "antigravity": {
        "version": "1.0.0",
        "description": "Antigravity AI Development Team MCP Configuration",
        "roleAuthorization": {
            "project_lead": {
                "allowed": [
                    "github",
                    "memory"
                ],
                "tools": {
                    "github": [
                        "list_issues",
                        "get_issue",
                        "create_issue",
                        "search_code"
                    ],
                    "memory": [
                        "create_entities",
                        "search_nodes",
                        "read_graph"
                    ]
                }
            },
            "product_manager": {
                "allowed": [
                    "tavily"
                ],
                "tools": {
                    "tavily": [
                        "search",
                        "extract"
                    ]
                }
            },
            "architect": {
                "allowed": [
                    "github",
                    "tavily"
                ],
                "tools": {
                    "github": [
                        "get_file_contents",
                        "search_code",
                        "list_commits"
                    ],
                    "tavily": [
                        "search"
                    ]
                }
            },
            "developer": {
                "allowed": [
                    "github",
                    "git"
                ],
                "tools": {
                    "github": [
                        "get_file_contents",
                        "push_files",
                        "create_pull_request",
                        "create_branch"
                    ],
                    "git": [
                        "git_status",
                        "git_add",
                        "git_commit",
                        "git_diff",
                        "git_log"
                    ]
                }
            },
            "qa_engineer": {
                "allowed": [
                    "puppeteer",
                    "memory"
                ],
                "tools": {
                    "puppeteer": [
                        "puppeteer_navigate",
                        "puppeteer_screenshot",
                        "puppeteer_click",
                        "puppeteer_fill",
                        "puppeteer_evaluate"
                    ],
                    "memory": [
                        "create_entities",
                        "search_nodes",
                        "read_graph"
                    ]
                }
            },
            "orchestrator": {
                "allowed": [
                    "filesystem",
                    "memory"
                ],
                "tools": {
                    "filesystem": [
                        "read_file",
                        "write_file",
                        "create_directory",
                        "list_directory"
                    ],
                    "memory": [
                        "create_entities",
                        "create_relations",
                        "search_nodes",
                        "read_graph",
                        "delete_entities"
                    ]
                }
            }
        },
        "securityControls": {
            "requireApproval": [
                "github.push_files",
                "github.create_pull_request",
                "github.create_issue",
                "github.create_branch"
            ],
            "autoApprove": [
                "github.get_file_contents",
                "github.search_code",
                "github.list_issues",
                "puppeteer.puppeteer_screenshot",
                "tavily.search",
                "memory.search_nodes",
                "filesystem.read_file"
            ]
        },
        "dynamicDiscovery": {
            "enabled": true,
            "handshakeOnly": true,
            "onDemandSchema": true,
            "toolSearchEnabled": true
        }
    }
}